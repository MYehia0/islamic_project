<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Islamic_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/gold</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="bottom_navigation_style" parent="Theme.Islamic_project">
        <item name="backgroundTint">@color/gold</item>
    </style>

    <style name="sura_details_style" parent="Theme.Islamic_project">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="quran_style" parent="Theme.Islamic_project">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sebha_button_style" parent="Theme.Islamic_project">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tasbeeh_button_bg</item>
    </style>

</resources>